<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/receiveImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_image_24"/>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:  "
            android:textColor="@color/black"
            android:padding="16sp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_below="@id/receiveImage"/>

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:padding="16sp"
            android:textSize="20dp"
            android:layout_below="@id/textViewName"/>

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:padding="16sp"
            android:textSize="20dp"
            android:layout_below="@id/textViewAge"/>

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:padding="16sp"
            android:textSize="20dp"
            android:layout_below="@id/textViewAddress"/>

        <TextView
            android:id="@+id/textViewCaretakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caretaker Name: "
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:padding="16sp"
            android:textSize="20dp"
            android:layout_below="@id/textViewPhone"/>

        <TextView
            android:id="@+id/textViewCaretakerPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caretaker Phone: "
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:padding="16sp"
            android:textSize="20dp"
            android:layout_below="@id/textViewCaretakerName"/>

        <TextView
            android:id="@+id/textViewRelativeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCaretakerPhone"
            android:layout_marginTop="10dp"
            android:padding="16sp"
            android:text="Relative Name: "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewRelativePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relative Phone: "
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:padding="16sp"
            android:layout_below="@id/textViewRelativeName"/>


        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textViewRelativePhone"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>